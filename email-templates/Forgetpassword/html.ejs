      min-height: 100%;
      min-height: 100vh;
      /* if the browser supports it */
      border-collapse: collapse;
      font-family: 'Muli', sans-serif;
    }

    #main-wrapper {
      margin: 0 auto;
      padding: 34px 0;
      width: 750px;
    }

    #main {
      margin: 0 auto;
      width: 750px;
      border-collapse: collapse;
    }

    .align_center {
      vertical-align: middle;
    }

    /* Header */
    #logo {

      height: 24px;
      display: block;
    }

    #logo img {

      height: 24px;
      display: block;
    }

    #view-browser {
      color: #87878c;
      font-size: 12px;
      font-weight: 500;
      line-height: 24px;
      text-align: center;
    }

    #login {
      color: #009dda;
      font-size: 14px;
      font-weight: 500;
      line-height: 24px;
      text-align: right;
      display: inline-block;
    }

    #login span {
      margin-left: 8px;
    }

    /* Main Content */
    #content {
      padding-top: 34px;
    }

    #content-container {
      padding: 60px 0 60px;
      width: 100%;
      background-color: #e86c61;
    }

    #basic-content {
      color: #ffffff;
      font-family: Muli, sans-serif;
      font-size: 28px;
      line-height: 35px;
      padding: 0 55px 0 60px;
    }

    /* Playbook card */
    #playbook-card {
      width: 425px;
      padding-left: 60px;
    }

    #playbook-body {
      width: 256px;
      border-collapse: collapse;
    }

    #playbook-image {
      width: 100%;
      padding: 0;
    }

    #playbook-image img {
      display: block;
      width: 100%;
      max-width: 100%;
    }

    #bottom-content-container {
      background-color: #fff;
      border-collapse: collapse;
      width: 100%;
    }

    #bottom-content-padding {
      padding: 75px 60px 55px;
    }

    .title {
      margin-top: 0;
      font-weight: 500;
    }

    .text-content {
      font-size: 16px;
      line-height: 24px;
    }

    #footer {
      padding: 30px 0;
    }

    #footer-container {
      width: 100%;
    }

    #footer-container td {
      vertical-align: middle;
    }

    #social-list {
      list-style-type: none;
      overflow: hidden;
      margin: 0;
      padding: 0;
    }

    #social-list li {
      margin-right: 20px;
      float: left;
    }

    #social-list li a {
      display: block;
    }

    #social-list li a img {
      width: 35px;
      height: 32px;
      display: block;
    }

    #copyright {
      text-align: right;
      color: #a0a0a0;
    }

    @media screen and (max-width: 767px) {

      #basic-content,
      #playbook-card {
        display: block !important;
        padding: 30px 0 !important;
        margin: 0 auto !important;
      }
    }
  </style>
</head>

